<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description, input_html: { placeholder: "Add dose" } %>
    <%= f.input :ingredient, input_html: { placeholder: "Pick ingredient" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
